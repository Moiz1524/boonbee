<div class="container py-3">
    <center>
        <h2 class="my-3">Search for People</h2>
        <%= form_tag requests_path, method: :get do %>
        <div class="field search-requests">
            <%= text_field_tag :search, params[:search], class:"w-auto d-inline" %>
            <%= submit_tag "Search", class:"btn btn-primary" %>
        </div>
        <% end %>
    </center>
    <% if !@users.empty? %>
    <div class="py-4 px-3 bg-light mb-0 mt-4">
        <% @users.each do |u| %>
        <% if u.username == current_user.username %>
        <li>
            <%= u.username %> (ME)</li>
        <% else %>
        <ul class="fa-ul mb-0">
            <li><span class="fa-li"><i class="fas fa-user"></i></span><%= link_to(u.username, request_profile_path(:id => u.id )) %></li>
        </ul>
          <% end %>
        <% end %>
    </div>
    <% else %>
    <p class="py-4 px-3 bg-light mb-0 mt-4">No results found!.</p>
    <% end %>
</div>