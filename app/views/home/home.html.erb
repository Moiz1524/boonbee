<div class="container-fluid container-top py-4">
    <div class="container container-signin container-sign p-4">
        <div class="modal-login-body">
            <%= form_tag new_campaign_path, method: :get do %>
                <div class="form-group">
                    <%= select_tag :occ_type, options_for_select(@types),  {:include_blank => 'Select Occasion',  class: 'form-control'} %>
                </div>
                <div class="form-group">
                    <%= text_field_tag :user_occ, params[:user_occ], {class:"form-control other_text d-non", placeholder:"Describe your Occasion's type", maxlength:"20"} %>
                </div>
                <div class="form-group">
                    <%= date_field_tag :occ_date, params[:occ_date], class: 'form-control' %>
                </div>
                <div class="form-group">
                    Who is this for?
                </div>
                <div class="form-group">
                    <select class="form-control me_else">
                        <option value="me">Me</option>
                        <option value="other">Someone Else</option>
                    </select>
                </div>
                    <a href="/campaigns" class="btn btn-primary btn-block give_m d-non">Give Money</a>
                    <%= submit_tag "Get Money", class: 'btn btn-primary btn-block get_m' %>
            <% end %>
        </div>
    </div>
</div>
