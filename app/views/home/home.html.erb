<script type="text/javascript">
    $('.me_else').on('change',function(){
       if($(this).val() == "me"){
           $('.give_m').hide();
           $('.get_m').css('display','block');
       }
       if($(this).val() == "other"){
           $('.give_m').css('display','block');
           $('.get_m').hide();
       }
    });
    $('#occ_type').on('change',function(){
        if($(this).val() == "other"){
            $('.other_text').show();
        }
        else{
            $('.other_text').hide();
        }
    });
</script>
